<div style='border-width:1px;border-color:black;min-height:600px;'>
    <table style='width:100%;'>
        <caption><h3><b>Aujoud'hui ({{ 'now'|date('d/m/Y') }})</b></h3></caption>
        <tr>
            <th>
                Client
            </th>
            <th>
                Tache/Commentaire
            </th>
            <th>
                Debut-Fin
            </th>
            <th>
                Temps
            </th>
        </tr>
    {% for activity in activities %}
        {% set isFinish = (activity['end'] != '0000-00-00 00:00:00') %}
        <tr class='activity dailyRow' data-activityId='{{ activity['id'] }}' data-isfinish='{{isFinish}}' data-start='{{activity['start']}}' data-end='{{activity['end']}}' style='height:41px;border-top: 1px solid grey;font-size:1em;'>
            <td>
                <span class='dailyRow_client_name editable'>{{ activity['client_name'] }}
                ({{activity['client_ref2']}}-{{activity['client_ref']}})</span>
                {% if activity['activityType_name'] == 'Développement' %}
                <span class='label label-primary'>Développement</span>
                {% elseif activity['activityType_name'] == 'Relationnel client' %}
                <span class='label label-info'>Relationnel client</span>
                {% elseif activity['activityType_name'] == 'R&D' %}
                <span class='label label-warning'>R&D</span>
                {% elseif activity['activityType_name'] == 'Reunion interne' %}
                <span class='label label-success'>Reunion interne</span>
                {% endif %}
            </td>
            <td class='taskComment'>
                {{ activity['task'] }}/{{ activity['commentary'] }}
            </td>
            <td>
                <span class='editable timebound startTime' data-type='time' data-name='start_time'>{{ activity['start']|date('H\\hi') }}</span> -
                <span class='editable timebound endTime' data-type='time' data-name='end_time'>
                {% if activity['end'] != 0 %}
                    {{ activity['end']|date('H\\hi') }}
                {% else %}
                    n/a
                {% endif %}
                </span>
            </td>
            <td>
                {% if activity['timeSpend'] %}
                {{ activity['timeSpend']|date_modify('-1 hour')|date('H\\hi') }}
                {% endif %}
            </td>
        </tr>
    {% endfor %}
    </table>
    <div style='position:absolute; right:50px; bottom:0;'>
        <h3>Temps total : {{ worktimeToday['hour'] }}h{{ worktimeToday['minute'] }}m{{ worktimeToday['second'] }}s</h3>
    </div>
    </div>
        <button class='btn btn-success btn_edit_bound_activity btn_edit_end_activity' style='position:absolute;right:16px;width:80px;height:40px'>Exporter</button>
        <button id='copy' class='btn btn-success btn_edit_bound_activity btn_edit_end_activity' style='position:absolute;right:100px;width:80px;height:40px'>Copier</button>
    <div>
</div>
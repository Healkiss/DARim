<div style='border-width:1px;border-color:black;min-height:600px;border-style:solid;'>
    <table style="width:100%;">
        <caption>Aujoud'hui ({{ "now"|date("d/m/Y") }})</caption>
        <tr>
            <th>
                Client-Type
            </th>
            <th>
                Tache/Commentaire
            </th>
            <th>
                Debut
            </th>
            <th>
                Fin
            </th>
        </tr>
    {% for activity in activities %}
        {% set isFinish = (activity['end'] != "0000-00-00 00:00:00") %}
        <tr class='activity dailyRow' data-activityId='{{ activity['id'] }}' data-isfinish='{{isFinish}}' style='height:41px;border-top: 1px solid green;font-size:1em;'>
            <td>
                {{ activity['client_name'] }} 
                ({{activity['client_ref2']}}-{{activity['client_ref']}})
                {% if activity['activityType_name'] == "Développement" %}
                <span class="label label-primary">Développement</span>
                {% elseif activity['activityType_name'] == "Relationnel client" %}
                <span class="label label-info">Relationnel client</span>
                {% elseif activity['activityType_name'] == "R&D" %}
                <span class="label label-warning">R&D</span>
                {% elseif activity['activityType_name'] == "Reunion interne" %}
                <span class="label label-success">Reunion interne</span>
                {% endif %}
            </td>
            <td>
                {{ activity['task'] }}/{{ activity['commentary'] }}
            </td>
            <td>
                {{ activity['start']|date("H\\hi") }}
            </td>
            <td>
                {% if activity['end'] != 0 %}
                    {{ activity['end']|date("H\\hi") }}
                {% else %}
                    n/a
                {% endif %}
            </td>
        </tr>
    {% endfor %}
    </table>
    <div style='position:absolute; right:50px; bottom:0;'>
        <h3>Temps total : {{ worktimeToday['hour'] }}h{{ worktimeToday['minute'] }}m{{ worktimeToday['second'] }}s</h3>
    </div>
</div>
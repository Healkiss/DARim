<div>
	<form id="my-form"  style="margin-top:20px;border: 2px solid black;padding:20px;width:975px;">
		<select class="selectpicker" id="form-input-client" name="client" title='Client' data-style="btn-default" data-live-search="true" method="post">
			{% for client in clients %}
			<option value="{{ client['client_id'] }}">{{ client['client_name'] }} ({{ client['client_ref2'] }}-{{ client['client_ref'] }})</option>
			{% endfor %}
		</select>
		<select class="selectpicker" id="form-input-activityType" name="activityType" title='Type' data-style="btn-default">
			{% for activityType in activityTypes %}
				<option value="{{ activityType['activityType_id'] }}" data-content="<span class='label label-{{ activityType['activityType_color'] }}'>{{ activityType['activityType_name'] }}</span>" data-width="auto">{{ activityType['name'] }}</option>
			{% endfor %}
		</select>
		<input type="text" id="form-input-task" name="task" id="task" class="my-input" placeholder="Tache" required>
		<textarea type="text" id="form-input-comment" name="comment" id="comment" class="my-input my-textarea" placeholder="Commentaire" required></textarea>
    	<button id='submitAndStart' type="submit" name="action" value="submitAndBegin" class="addActivity submit btn btn-success"><i class='glyphicon glyphicon-play'></i></button>
    	<button id='submitTodo' type="submit" name="action" value="submit" class="addActivity btn submit btn-primary" style="margin-left:5px;font-size:1em;"><i class='glyphicon glyphicon-list-alt'></i></button>
	</form>
</div>
